# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page


# Map static resources from the /public folder to the /assets URL path
GET     /employees                controllers.EmployeeController.findAll()
GET     /employees/:id            controllers.EmployeeController.findOne(id: String)
POST    /employees                controllers.EmployeeController.create()
PUT     /employees/:id            controllers.EmployeeController.update(id: String)
DELETE  /employees/:id            controllers.EmployeeController.delete(id: String)


